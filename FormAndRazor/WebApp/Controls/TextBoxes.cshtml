@{
    Layout = "~/_Layout.cshtml";
    Page.Title = "TextBoxes";

    //The Processing of this page is pysically done from TOP to BOTTOM
    //Capture the incoming "post" method data
    //All data coming in will all be strings
    //If a form control does NOT exist, the value null is returned
    //If a form control does exist, then the associated data is returned
    //For a textbox control, the data is the entered data
    //For a form submit button, the data is the value assigned tot the value parameter
    var leftside = Request.Form["inputleft"];
    var rightside = Request.Form["inputright"];
    var thebutton = Request.Form["formbutton"];
}
@section head {
    <link href="~/Content/MyCustomStyles.css" rel="stylesheet" />
}
@section banner {
    <h1>TextBoxes</h1>
}
<!--This html will appear in the RenderBody of the Layout page-->
@if (IsPost)
{
    //Which form button was pressed
    //<p>You have sent this form back. IsPost is true</p>
    if (thebutton.Equals("left"))
    {
        <p>Your name is @leftside</p>
    }
    else if (thebutton.Equals("right"))
    {
        <p>Your favorite color is @rightside</p>
    }
    else
    {
        leftside = null;
        rightside = null;
    }
}
else
{
    <p>You have not yet sent this form back. IsPost is false</p>
}
<form id="theform" method="post">
    <div class="row">
        <div class="col-md-6">
            <label for="inputleft">Left</label>
            <input type="text" id="inputleft" name="inputleft" placeholder="Enter Your Name" value="@leftside" />
            <button type="submit" id="formbutton" name="formbutton" class="btn" value="left">Press Left</button>
        </div>
        <div class="col-md-6">
            <label for="inputright">Right</label>
            <input type="text" id="inputright" name="inputright" placeholder="Enter Your Favorite Color" value="@rightside" />
            <button type="submit" id="formbutton" name="formbutton" class="btn" value="right">Press right</button>
        </div>
    </div>
    <div class="row">
        <div class="col-md-offset-5">
            <button type="submit" id="formbutton" name="formbutton" class="btn" value="reset">Reset on Server</button>
        </div>
    </div>
</form>
