@{
    Layout = "~/_Layout.cshtml";
    Page.Title = "RadioButton";
    //obtain the incoming values
    var language = Request.Form["languagegroup"];
    var script = Request.Form["scriptgroup"];
    if (language == null)
    {
        language = "";
    }
    if (script == null)
    {
        script = "";
    }
}
@section head {
    <link href="~/Content/MyCustomStyles.css" rel="stylesheet" />
}
@section banner {
    <h1>RadioButtons</h1>
}

@if (IsPost)
{
    //Adding validation
    if (language.IsEmpty() || script.IsEmpty())
    {
        <p><span style="color:firebrick">Make a selection from both coding and scipting</span></p>
    }
    else
    {
        //Validation has been passed
        if (language.Equals("C#", StringComparison.OrdinalIgnoreCase))
        {
            <p>You will greatly enjoy the CPSC1517 course as we use C#</p>
        }
        else
        {
            <p>Too bad. The CPSC1517 course uses C#</p>
        }
        if (script.Equals("RAZOR", StringComparison.OrdinalIgnoreCase))
        {
            <p>You will greatly enjoy the CPSC1517 course as we use Razor</p>
        }
        else
        {
            <p>Too bad. The CPSC1517 course uses Razor</p>
        }
    }
}
<!--What makes a radio button group is the fact that the id = parameter is the same on each control-->
<!--If you wish multiple radio button groups on your form, then each group get a unique id-->
<form id="theform" method="post">
    <div class="row">
        <div class="col-md-offset-2">
            <label id="languagegroup">Select your favorite programming language</label>
            <br />
            <input type="radio" id="languagegroup" name="languagegroup" value="C#" checked="(@language.Equals("C#")?true:false)" />C#<br />
            <input type="radio" id="languagegroup" name="languagegroup" value="VB" checked="(@language.Equals("VB")?true:false)" />Visual Basic<br />
            <input type="radio" id="languagegroup" name="languagegroup" value="ObjectiveC" checked="(@language.Equals("ObjectiveC")?true:false)" />ObjectiveC<br />
            <input type="radio" id="languagegroup" name="languagegroup" value="Cobol" checked="(@language.Equals("Cobol")?true:false)" />Cobol<br />
            <input type="radio" id="languagegroup" name="languagegroup" value="Fortran" checked="(@language.Equals("Fortran")?true:false)" />Fortran<br />
            <input type="radio" id="languagegroup" name="languagegroup" value="Pascal" checked="(@language.Equals("Pascal")?true:false)" />Pascal<br />
            <br />
            <label id="scriptgroup">Select your favorite scripting code</label>
            <br />
            <input type="radio" id="scriptgroup" name="scriptgroup" value="JS" checked="(@script.Equals("JS")?true:false)" />JavaScript<br />
            <input type="radio" id="scriptgroup" name="scriptgroup" value="PHP" checked="(@script.Equals("PHP")?true:false)" />PHP<br />
            <input type="radio" id="scriptgroup" name="scriptgroup" value="Razor" checked="(@script.Equals("Razor")?true:false)" />Razor<br />
        </div>
    </div>
    <div class="row">
        <div class="col-md-offset-3">
            <button type="submit" class="btn btn-primary" id="formbutton" name="formbutton" value="submit">Submit</button>
        </div>
    </div>
</form>

